<div>

  <h2>Detalles de la pelicula</h2>

  <h4>{{movieDetails.title}}</h4>
  <p>Genero: {{movieDetails.genre}}</p>
  <p>Trama: {{movieDetails.plot}}</p>

  <p>Reparto:

    {{#each movieDetails.cast}}

      <p>{{name}}</p>
      <p>{{occupation}}</p>
      <p>{{catchPhrase}}</p>

    {{/each}}
 </p>

<a href="/movies/{{this.movieDetails._id}}/edit">
<button>Actualizar</button>
</a>


<form action="/movies/{{movieDetails._id}}/delete" method="post">
<button>Delete</button>
</form>
    
 

</div>